doctype html
head
  if stream
    title= stream.title + ' - unific'
  else
    title= 'unific'

  //-
    Atom/RSS Feed

  if stream
    link(rel="alternate",
      type="application/rss+xml",
      href="/" + stream.title
      )

  //-
     Include Library (Primaly)
  //- css
  link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css')
  link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
  link(rel='stylesheet', href="//maxcdn.bootstrapcdn.com/bootswatch/3.2.0/simplex/bootstrap.min.css")

  //- favicon
  link(rel="shortcut icon",href="/favicon.ico",type="image/x-icon")
  link(rel="icon",         href="/favicon.ico",type="image/x-icon")

body
  .container
    .row
      .col-md-12.col-lg-12.col-xs-12.center-block
        .page-header
          if stream
            h1= stream.title
            small unific.net
          else
            h1= 'Unific'

        block content
  #Include

    //- javascript
    script(src='/socket.io/socket.io.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.1/underscore-min.js')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.1.0/moment.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.2/backbone-min.js')
    script(src="//cdnjs.cloudflare.com/ajax/libs/backbone.marionette/2.0.3/backbone.marionette.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/livestamp/1.1.2/livestamp.min.js")

    script(src="/vendor/js/jquery.bootstrap-growl.min.js")

    //- User Script
    script(src="/js/notify.js" type="application/javascript")
    script(src="/js/http.js"   type="application/javascript")
    script(src="/js/io.js"     type="application/javascript")
    script(src="/js/model.js"  type="application/javascript")
    script(src="/js/view.js"   type="application/javascript")
    script(src="/js/unific.js" type="application/javascript")



